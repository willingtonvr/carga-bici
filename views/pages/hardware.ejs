                        backgroundColor: [
                          'rgba(69, 172, 52, 0.8)',
                          'rgba(23, 75, 94, 0.8)',
                          'rgba(226, 132, 19, 0.8)',
                          'rgba(80, 193, 228, 0.8)'
                        ],
                        borderColor: [
                            'rgba(255,99,132,1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                  title:{
                    display:true,
                    text:'Promedio de Corriente'
                  },
                  legend: {
                    display: false
                  },
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero:true
                            }
                        }]
                    }
                }
            });
            </script>
        </div>
        <div id="temp_history" class="jumbotron">
            <canvas id="graf_temp" width="300" height="100"></canvas>

            <script>
            var prom1T= <%= parseFloat(estadistica.promedios.prom1T).toFixed(2) %>
            var prom2T = <%= parseFloat(estadistica.promedios.prom2T).toFixed(2) %>
            var prom3T = <%= parseFloat(estadistica.promedios.prom3T).toFixed(2) %>
            var prom4T = <%= parseFloat(estadistica.promedios.prom4T).toFixed(2) %>
            var ctx = document.getElementById("graf_temp");
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ["Slot 1", "Slot 2", "Slot 3", "Slot 4"],
                    datasets: [{
                        label: '',
                        data: [prom1T, prom2T, prom3T, prom4T],
                        backgroundColor: [
                          'rgba(69, 172, 52, 0.8)',
                          'rgba(23, 75, 94, 0.8)',
                          'rgba(226, 132, 19, 0.8)',
                          'rgba(80, 193, 228, 0.8)'
                        ],
                        borderColor: [
                            'rgba(255,99,132,1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                  title:{
                    display:true,
                    text:'Promedio de Temperatura'
                  },
                  legend: {
                    display: false
                  },
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero:true
                            }
                        }]
                    }
                }
            });
            </script>
        </div>

    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>
</html>
